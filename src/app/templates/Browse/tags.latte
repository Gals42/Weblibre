{block title2}
  {if !$presenter->isAjax() && isset($id)}
    {$result} | {_("Tags")}
  {else}
    {_("Tags")}
  {/if}
{/block}
{block content2}

{if $id == NULL}
  
  <div class="select">
  <table>
    
    <tr>
      <th>{_("Tag")}</th>
      <th class="ratingWidth">{_("Rating")}</th>
      <th>{_("Number of books")}</th>
    </tr>

    {includeblock '@ratingAvg.latte'}
    
    {foreach $result as $line}
      <tr n:class="link, ($iterator->even)? even">
        <td class="max-width">
          <div>
            <a n:href="this id => $line['id']">
              <h2>{$line['name']}</h2>
            </a>
          </div>
        </td>
        <td class="nowrap">
          {include #ratingAvg, lid => $line['id'], rating => $line['rating']}
        </td>
        <td class="nowrap">
          <a n:href="this id => $line['id']">
            {$line['count']}
          </a>
        </td>
      </tr>
    {/foreach}
  
  </table>
  </div>

{else}

  {includeblock '@loadAjax.latte'}

{/if}